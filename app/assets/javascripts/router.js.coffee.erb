@rating.config ['$routeProvider', '$locationProvider', ($routeProvider, $locationProvider) ->

  $routeProvider.when '/:locale',
    # templateUrl: '<%= asset_path("index.html.slim") %>'
    templateUrl: '<%= asset_path("rating.html.slim") %>'
    controller: 'rating.RatingCtrl'

  $routeProvider.when '/:locale/:realm',
    templateUrl: '<%= asset_path("rating.html.slim") %>'
    controller: 'rating.RatingCtrl'

  $routeProvider.when '/:locale/:realm/alternatives/:id',
    templateUrl: '<%= asset_path("details.html.slim") %>'
    controller: 'rating.DetailsCtrl'

  $locationProvider.html5Mode(true)
]
